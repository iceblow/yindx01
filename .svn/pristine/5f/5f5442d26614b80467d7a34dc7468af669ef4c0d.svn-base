<form class="form-horizontal" role="form"  id="versionForm">
<div class="row">
		<input type="hidden" id="id" value="${banner.bannerid }"/>
		
		<div class="col-xs-12" >
	        <div class="form-group">
				<label Style="text-align: center;" class="col-sm-1 control-label no-padding-right" for="form-field-6">轮播图跳转类型</label>
				<div class="col-sm-2">
					<select data-rel="tooltip" type="text" class="col-sm-10 searchKey" id="type" onchange="changeType()" name="type" title="轮播图跳转类型" data-placement="bottom" >
						<option value="">请选择</option>
						<option value="0" <c:if test="${banner.type==0 }">selected</c:if> >外联</option>
						<option value="1" <c:if test="${banner.type==1 }">selected</c:if> >公司</option>
						<option value="2" <c:if test="${banner.type==2 }">selected</c:if> >阿姨</option>
					</select>
				</div>
			</div>
		</div>
		
		
		
		<div class="col-xs-12" >
	        <div class="form-group">
				<label Style="text-align: center;" class="col-sm-1 control-label no-padding-right" for="form-field-6">内容</label>
				<div class="col-sm-2" id="content" data-val="${banner.contentid }">
				<c:if test="${banner.type==0 }">
					<input class="col-sm-10 searchKey" id="contentid" name="contentid" value="${banner.contentid }" class="searchKey" title="内容" data-placement="bottom"/>
				</c:if>
				<c:if test="${banner.type==1 }">
						<select data-rel="tooltip" type="text" class="col-sm-10 searchKey" id="contentid" name="contentid" title="内容" data-placement="bottom" >
						<option value="">请选择</option>
						<c:forEach items="${cmp }" var="c">
						<option value="${c.companyid }" <c:if test="${banner.contentid==c.companyid }">selected</c:if> >${c.name }</option>
						</c:forEach>
					</select>
				</c:if>
				<c:if test="${banner.type==2 }">
						<select data-rel="tooltip" type="text" class="col-sm-10 searchKey" id="contentid" name="contentid" title="内容" data-placement="bottom" >
						<option value="">请选择</option>
						<c:forEach items="${aunt }" var="a">
						<option value="${c.auntid }" <c:if test="${banner.contentid==a.auntid }">selected</c:if> >${a.realName }</option>
						</c:forEach>
					</select>
				</c:if>
<!-- 					<select data-rel="tooltip" type="text" class="col-sm-10 searchKey" id="contentid" name="contentid" title="内容" data-placement="bottom" > -->
<!-- 						<option value="">请选择</option> -->
<%-- 						<option value="0" <c:if test="${banner.contentid==0 }">selected</c:if> >外联的地址</option> --%>
<%-- 						<option value="1" <c:if test="${banner.contentid==1 }">selected</c:if> >公司Id</option> --%>
<%-- 						<option value="2" <c:if test="${banner.contentid==2 }">selected</c:if> >阿姨Id</option> --%>
<!-- 					</select> -->
				</div>
			</div>
		</div>
		
		<div class="col-xs-12" id="pic" >
		
			<div class="form-group">
				<label Style="text-align: center;" class="col-sm-1 control-label no-padding-right" for="form-field-6">图片地址</label>
				<div class="col-sm-8">
					<div id="dropzone" class="col-sm-2 dropzone" data-img="${img }">
					<img data-dz-thumbnail width="184px" height="200px" src="${img }" id="changeimg"/>
					
					</div>
					<input value="还原" onclick="returnOldPic()" style="width:40px;height:40px;" type="button" />
				</div>
				
			</div>
		</div>
		<div class="col-xs-12" >
	        <div class="form-group">
				<label Style="text-align: center;" class="col-sm-1 control-label no-padding-right" for="form-field-6">key</label>
				<div class="col-sm-2">
					<input name="key" id="key" class="searchKey" readonly/>
				</div>
			</div>
		</div>
		
		<div class="col-xs-3" style="clear:both;float: initial;margin-top: 70px;">
	        <div class="form-group">
				<button class="btn btn-info" type="button" style="margin-left: 30%;" onclick="submitaction()">
					<i class="icon-ok bigger-110"></i>
					提交
				</button>
				<button class="btn" type="button" style="margin-left: 20%;" onclick="goback()">
					<i class="icon-undo bigger-110"></i>
					取消
				</button>
			</div>
		</div>
		<div class="col-xs-12">
			<!-- PAGE CONTENT BEGINS -->
				<table id="grid-table"></table>
				<div id="grid-pager"></div>
		</div><!-- /.col -->
</div><!-- /.row -->
</form>
